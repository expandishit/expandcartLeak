                                    <label class="control-label">{{ lang('text_show_meta_tag') }}</label>
                                    <div class="checkbox checkbox-switchery">
                                        <label>
                                            <input type="checkbox" onchange="changeStatus(this);" name="show_meta_tag" class="switchery" {{ show_meta_tag in ['1', 1, 'on'] ? 'checked' }}>
                                            <span class="switchery-status">{{ show_meta_tag in [1, '1', 'on'] ? lang('text_enabled') : lang('text_disabled') }}</span>
                                        </label>
                                    </div>
                                </div>
                                <span class="text-muted">{{ langempty('text_show_meta_tag_desc') }}</span>
                            </div>
                            <!-- /Show Meta Tag -->

                            <!-- Show Meta Description -->
                            <div class="switch-line-group" id="meta_desc-group">
                                <div class="switch-line">
                                    <label class="control-label">{{ lang('text_show_meta_desc') }}</label>
                                    <div class="checkbox checkbox-switchery">
                                        <label>
                                            <input type="checkbox" onchange="changeStatus(this);" name="show_meta_desc" class="switchery" {{ show_meta_desc in ['1', 1, 'on', NULL] ? 'checked' }}>
                                            <span class="switchery-status">{{ show_meta_desc in [1, '1', 'on'] ? lang('text_enabled') : lang('text_disabled') }}</span>
                                        </label>
                                    </div>
                                </div>
                                <span class="text-muted">{{ langempty('text_show_meta_desc_desc') }}</span>
                            </div>
                            <!-- /Show Meta Description -->

                             <!-- Show Meta Description -->
                            <div class="switch-line-group" id="auto-price-weigh-calc">
                                <div class="switch-line">
                                    <label class="control-label">{{ lang('text_auto_price_weigh_calc') }}</label>
                                    <div class="checkbox checkbox-switchery">
                                        <label>
                                            <input type="checkbox" onchange="changeStatus(this);" name="auto_price_weigh_calc" class="switchery" {{ auto_price_weigh_calc in ['1', 1, 'on', NULL] ? 'checked' }}>
                                            <span class="switchery-status">{{ auto_price_weigh_calc in [1, '1', 'on'] ? lang('text_enabled') : lang('text_disabled') }}</span>
                                        </label>
                                    </div>
                                </div>
                                <span class="text-muted">{{ langempty('text_auto_price_weigh_calc_desc') }}</span>
                            </div>
                            <!-- /Show Meta Description -->

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group" id="config_show_attribute-group">
                                        <label class="control-label">{{ lang('entry_show_attribute') }}</label>
                                        <select class="form-control" name="config_show_attribute">
                                            <option value="0">-- {{ lang('text_none') }} --</option>
                                            <option value="all">{{ lang('text_all') }}</option>
                                            {% for key, value in attributes %}
                                                <option {{ key == config_show_attribute ? 'selected' : '' }}
                                                        value="{{ key }}">{{ value }}</option>
                                            {% endfor %}
                                        </select>
                                        <span class="help-block"></span>
                                        <span class="text-muted">{{ lang('entry_show_attribute_help') }}</span>
                                    </div>
                                </div>

                                {# Default Sorting Column #}
                                <div class="col-md-4">
                                    <div class="form-group" id="config_show_attribute-group">
                                        <label class="control-label">{{ lang('entry_default_sorting_column') }}</label>
                                        <select class="form-control" name="config_products_default_sorting_column">
                                            <option value="date_added" {{ config_products_default_sorting_column  in [ 'dated_added', '' ] ? 'selected' : ''}}>{{ lang("entry_date_added") }}</option>
                                            <option value="date_available" {{ config_products_default_sorting_column == 'date_available' ? 'selected' : ''}}>{{ lang("entry_date_available") }}</option>
                                            <option value="name" {{ config_products_default_sorting_column == 'name' ? 'selected' : ''}}>{{ lang("entry_name") }}</option>
                                            <option value="stock_status" {{ config_products_default_sorting_column == 'stock_status' ? 'selected' : ''}}>{{ lang("entry_stock_status") }}</option>
                                        </select>
                                        <span class="help-block"></span>
                                        <span class="text-muted">{{ lang('entry_show_attribute_help') }}</span>
                                    </div>
                                </div>
                                {# /Default Sorting Column #}
                                
                                {# Default Sorting Column By #}
                                <div class="col-md-4">
                                    <div class="form-group" id="config_show_attribute-group">
                                        <label class="control-label">{{ lang('entry_default_sorting_by_column') }}</label>
                                        <select class="form-control" name="config_products_default_sorting_by_column">
                                            <option value="ASC" {{ config_products_default_sorting_by_column == 'ASC' ? 'selected' : ''}}>{{ lang("text_sorting_by_asc") }}</option>
                                            <option value="DESC" {{ config_products_default_sorting_by_column == 'DESC' ? 'selected' : ''}}>{{ lang("text_sorting_by_desc") }}</option>
                                        </select>
                                    </div>
                                </div>
                                {# /Default Sorting Column #}
                            </div>

                            <div class="switch-line-group" id="enable_order_maximum_quantity">
                                <div class="switch-line">
                                    <label class="control-label">{{ lang('text_enable_order_maximum_quantity') }}</label>
                                    <div class="checkbox checkbox-switchery">
                                        <label>
                                            <input type="checkbox" onchange="changeStatus(this);" name="enable_order_maximum_quantity"
                                                class="switchery" {{ enable_order_maximum_quantity == 1 ? 'checked' : null }}>
                                            <span class="switchery-status">
                                                {{ enable_order_maximum_quantity == 1 ? lang('text_enabled') : lang('text_disabled') }}
                                            </span>
                                        </label>
                                    </div>
                                </div>
                                <span class="text-muted">{{ langempty('text_enable_order_maximum_quantity_help') }}</span>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-6" id="pending_order_statuses">
                                    <label class="control-label">{{ lang('text_pending_order_statuses') }}</label>
                                    <select name="pending_order_statuses[]" multiple id="pending_order_statuses" class="form-control">
                                        {% for order_status in order_statuses %}
                                            <option value="{{ order_status['order_status_id'] }}" {{ order_status['order_status_id'] in pending_order_statuses ? 'selected' : '' }}>{{ order_status['name'] }}</option>
                                        {% endfor %}
                                    </select>
                                    <span class="help-block"></span>
                                    <span class="text-muted">{{ langempty('text_pending_order_statuses_help') }}</span>
                                </div>

                                <div class="form-group col-md-6" id="product_addthis_id">
                                    <label class="control-label">{{ lang('text_product_addthis_id') }}</label>
                                    <input type="text" name="product_addthis_id" class="form-control" value="{{ product_addthis_id }}">
                                    <span class="help-block"></span>
                                    <span class="text-muted">{{ langempty('text_product_addthis_id_help') }}</span>
                                </div>
                                
                                <div class="clearfix"></div>

                                <!-- Config Catalog Limit -->
                                <div class="form-group col-md-6" id="config_catalog_limit-group">
                                    <label for="config_catalog_limit" class="control-label">{{ lang('entry_catalog_limit') }}</label>
                                    <input type="text" class="form-control touchy" id="config_catalog_limit" name="config_catalog_limit" value="{{ setting['config_catalog_limit'] }}">
                                    <span class="help-block"></span>
                                    <span class="text-muted">{{ langempty('entry_catalog_limit_help') }}</span>
                                </div>
                                <!-- /Config Catalog Limit -->
                                
                                <div class="clearfix"></div>

                                <!-- Image Not Available Placeholder -->
                                <div class="form-group col-md-6 no_image_uploader">
                                    <label for="image" class="control-label">{{ lang('entry_no_image') }}</label>
                                    {{ uploader.image({ 'thumbPath': no_image, 'imagePath': setting['no_image'], 'name': 'no_image' }) }}
                                    <span class="help-block"></span>
                                </div>

                                <!-- /Image Not Available Placeholder -->
                                <div class="form-group col-md-6">
                                    <label for="image" class="control-label">{{ lang('entry_product_no_image') }}</label>
                                    {{ uploader.image({ 'thumbPath': product_image_without_image, 'imagePath': setting['product_image_without_image'], 'name': 'product_image_without_image' }) }}
                                    <span class="help-block"></span>
                                </div>
                            </div>

                            <!-- Show Meta Tag -->
                            <div class="switch-line-group" id="outofstock_option-group">
                                <div class="switch-line">
                                    <label class="control-label">{{ lang('text_show_outofstock_option') }}</label>
