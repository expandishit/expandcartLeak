{% extends "base.expand" %}
{% from "controls/breadcrumb.expand" import breadcrumb as breadcrumb %}
{% import "controls/forms.expand" as forms %}
{% import 'controls/uploader.expand' as uploader %}

{% block secondarymenu %}
    {% include 'setting/settingmenu.expand' with {'expand': '#advanced', 'active': '#products'} %}
{% endblock secondarymenu %}

{% block title %}
    {{ lang('mn_setting_menu_products_s') }}
{% endblock title %}

{% block styles %}
	{% if base.direction == "ltr" %}
    <link href="view/assets/css/LTR/icons/icomoon2/style.css" rel="stylesheet" type="text/css">
	{% else %}
    <link href="view/assets/css/RTL/icons/icomoon2/style.css" rel="stylesheet" type="text/css">
	{% endif %}	
{% endblock styles %}

{% block breadcrumb %}
    {{ breadcrumb(breadcrumbs) }}
{% endblock breadcrumb %}

{% block headelements %}
    {% include "includes/buttons_top.expand" %}
{% endblock headelements %}

{% block content %}
    <style>
        .page-header-default {
            background-color: transparent;
        }
        .page-header-content + .breadcrumb-line {
            border: 0;
        }
    </style>
    <form id="setting-payment" class="form" action="{{ action }}">
        <div class="list-wrapper splited-settings">
            <div class="content-inner">
                <div class="row">
                    <div class="col-12 col-lg-4">
                        <p class="split-title">
                            {{lang('split_side_title_product_view')}}
                        </p>
                        <p class="split-content">
                            {{lang('split_side_content_product_view')}}
                        </p>
                    </div>
                    <div class="col-12 col-lg-8">
                        <div class="panel split-group p-20">

                            <div class="switch-line-group" id="store_products-group">
                                <div class="switch-line">
                                    <label class="control-label">{{ lang('entry_product_count') }}</label>
                                    <div class="checkbox checkbox-switchery">
                                        <label>
                                            <input type="checkbox" onchange="changeStatus(this);" name="config_product_count" class="switchery" {{ config_product_count in ['1', 1, 'on'] ? 'checked' }}>
                                            <span class="switchery-status">{{ config_product_count in [1, '1', 'on'] ? lang('text_enabled') : lang('text_disabled') }}</span>
                                        </label>
                                    </div>
                                </div>
                                <span class="text-muted">{{ langempty('entry_product_count_help') }}</span>
                            </div>
                            
                            <!-- Hide Add to cart button -->
                            <div class="switch-line-group" id="store_products-group">
                                <div class="switch-line">
                                    <label class="control-label">{{ lang('entry_out_of_stock_hide_button') }}</label>
                                    <div class="checkbox checkbox-switchery">
                                        <label>
                                            <input type="checkbox" onchange="changeStatus(this);" name="config_hide_add_to_cart" class="switchery"{{ config_hide_add_to_cart in ['1', 1, 'on'] ? 'checked' }}>
                                            <span class="switchery-status">{{ config_hide_add_to_cart in [1, '1', 'on'] ? lang('text_enabled') : lang('text_disabled') }}</span>
                                        </label>
                                    </div>
                                </div>
                                <span class="text-muted">{{ langempty('entry_out_of_stock_hide_button_help') }}</span>
                            </div>
                            <!-- Hide Add to cart button -->
							
                            <!-- show Paypal before onboarding  -->
							{% if config('paypal_payment_before_onboarding') == '1' and  config('paypal_account_connected') != '1' %}
                            <div class="switch-line-group" id="store_products-group">
                                <div class="switch-line">
                                    <label class="control-label">{{ lang('entry_paypal_view_checkout_before_onbaording_button') }}</label>
                                    <div class="checkbox checkbox-switchery">
                                        <label>
                                            <input type="checkbox" onchange="changeStatus(this);" name="config_hide_add_to_cart" class="switchery"{{ paypal_view_checkout in ['1', 1, 'on'] ? 'checked' }}>
                                            <span class="switchery-status">{{ paypal_view_checkout in [1, '1', 'on'] ? lang('text_enabled') : lang('text_disabled') }}</span>
                                        </label>
                                    </div>
                                </div>
                                <span class="text-muted">{{ langempty('entry_paypal_view_checkout_before_onbaording_help') }}</span>
                            </div>
							{% endif %}
                            <!-- # show paypal before onboarding  -->

                            <div class="switch-line-group" id="login_before_add_to_cart">
                                <div class="switch-line">
                                    <label class="control-label">{{ lang('text_login_before_add_to_cart') }}</label>
                                    <div class="checkbox checkbox-switchery">
                                        <label>
                                            <input type="checkbox" onchange="changeStatus(this);" name="login_before_add_to_cart"
                                                class="switchery" {{ login_before_add_to_cart == 1 ? 'checked' : null }}>
                                            <span class="switchery-status">
                                                {{ login_before_add_to_cart == 1 ? lang('text_enabled') : lang('text_disabled') }}
                                            </span>
                                        </label>
                                    </div>
                                </div>
                                <span class="text-muted">{{ langempty('text_login_before_add_to_cart_help') }}</span>
                            </div>

                            <!-- Show Brands -->
                            <div class="switch-line-group" id="store_products-group">
                                <div class="switch-line">
                                    <label class="control-label">{{ lang('text_show_brands') }}</label>
                                    <div class="checkbox checkbox-switchery">
                                        <label>
                                            <input type="checkbox" onchange="changeStatus(this);" name="show_brands" class="switchery" {{ show_brands in ['1', 1, 'on'] ? 'checked' }}>
                                            <span class="switchery-status">{{ show_brands in [1, '1', 'on'] ? lang('text_enabled') : lang('text_disabled') }}</span>
                                        </label>
                                    </div>
                                </div>
                                <span class="text-muted">{{ langempty('text_show_brands_desc') }}</span>
                            </div>
                            <!-- /Show Brands -->
                            
                            <!-- Show Brand Images -->
                            <div class="switch-line-group" id="store_products-group">
                                <div class="switch-line">
                                    <label class="control-label">{{ lang('entry_show_manfacture_image') }}</label>
                                    <div class="checkbox checkbox-switchery">
                                        <label>
                                            <input type="checkbox" onchange="changeStatus(this);" name="config_show_manfacture_image" class="switchery" {{ config_show_manfacture_image in ['1', 1, 'on'] ? 'checked' }}>
                                            <span class="switchery-status">{{ config_show_manfacture_image in [1, '1', 'on'] ? lang('text_enabled') : lang('text_disabled') }}</span>
                                        </label>
                                    </div>
                                </div>
                                <span class="text-muted">{{ langempty('entry_show_manfacture_image_help') }}</span>
                            </div>
                            <!-- /Show Brand Images -->

                            <!-- Show Seller -->
                            {% if show_seller_field %}
                            <div class="switch-line-group" id="seller_products-group">
                                <div class="switch-line">
                                    <label class="control-label">{{ lang('text_show_seller') }}</label>
                                    <div class="checkbox checkbox-switchery">
                                        <label>
                                            <input type="checkbox" onchange="changeStatus(this);" name="show_seller" class="switchery" {{ show_seller in ['1', 1, 'on'] ? 'checked' }}>
                                            <span class="switchery-status">{{ show_seller in [1, '1', 'on'] ? lang('text_enabled') : lang('text_disabled') }}</span>
                                        </label>
                                    </div>
                                </div>
                                <span class="text-muted">{{ langempty('text_show_seller_desc') }}</span>
                            </div>
                            {% endif %}
                            <!-- /Show Seller -->
                            
                            <!-- Show Meta Tag -->
                            <div class="switch-line-group" id="meta_tag-group">
