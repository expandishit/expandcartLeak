                                        <label>
                                            <input type="checkbox" onchange="changeStatus(this);" name="show_outofstock_option" class="switchery" {{ show_outofstock_option in ['1', 1, 'on'] ? 'checked' }}>
                                            <span class="switchery-status">{{ show_outofstock_option in [1, '1', 'on'] ? lang('text_enabled') : lang('text_disabled') }}</span>
                                        </label>
                                    </div>
                                </div>
                                <span class="text-muted">{{ langempty('text_show_outofstock_option_help') }}</span>
                            </div>
                            <!-- /Show Meta Tag -->

                            <!-- show option prices -->
                            <div class="switch-line-group" id="store_products-group">
                                <div class="switch-line">
                                    <label class="control-label">{{ lang('entry_show_option_prices') }}</label>
                                    <div class="checkbox checkbox-switchery">
                                        <label>
                                            <input type="checkbox" onchange="changeStatus(this);" name="config_show_option_prices" class="switchery" {{ config_show_option_prices in ['1', 1, 'on'] ? 'checked' }}>
                                            <span class="switchery-status">{{ config_show_option_prices in [1, '1', 'on'] ? lang('text_enabled') : lang('text_disabled') }}</span>
                                        </label>
                                    </div>
                                </div>
                                <span class="text-muted">{{ langempty('entry_show_option_prices_help') }}</span>
                            </div>
                            <!-- /show option prices -->

                            <div class="switch-line-group" id="enable_storable_products">
