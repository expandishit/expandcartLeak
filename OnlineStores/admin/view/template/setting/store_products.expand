                                    <p class="text-muted">
                                        {{lang('mn_setting_menu_units_content')}}
                                    </p>
                                </div>
                                <a href="{{ link("setting/store_units") }}" class="button blue-white-empty">
                                    {{lang('mn_setting_menu_units')}}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="list-wrapper splited-settings">
            <div class="content-inner">
