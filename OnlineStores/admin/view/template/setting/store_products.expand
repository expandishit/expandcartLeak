                                    <label class="control-label">{{ lang('enable_save_product_options') }}</label>
                                    <div class="checkbox checkbox-switchery">
                                        <label>
                                            <input type="checkbox" onchange="changeStatus(this);" name="enable_save_product_options"
                                                class="switchery" {{ config('enable_save_product_options') == 1 ? 'checked' : null }}>
                                            <span class="switchery-status">
                                                {{ config('enable_save_product_options') == 1 ? lang('text_enabled') : lang('text_disabled') }}
                                            </span>
                                        </label>
                                    </div>
                                </div>
                                <span class="text-muted">{{ langempty('enable_save_product_options_help') }}</span>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-6" id="product_option_image_width">
                                    <label class="control-label">{{ lang('text_product_option_image_width') }}</label>
                                    <input type="text" name="product_option_image_width" class="form-control" value="{{ product_option_image_width }}">
                                    <span class="help-block"></span>
                                    <span class="text-muted">{{ langempty('text_product_option_image_width_help') }}</span>
                                </div>

                                <div class="form-group col-md-6" id="product_option_image_height">
                                    <label class="control-label">{{ lang('text_product_option_image_height') }}</label>
                                    <input type="text" name="product_option_image_height" class="form-control" value="{{ product_option_image_height }}">
                                    <span class="help-block"></span>
                                    <span class="text-muted">{{ langempty('text_product_option_image_height_help') }}</span>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group" id="config_show_option-group">
                                        <label class="control-label">{{ lang('entry_show_option') }}</label>
                                        <select class="form-control" name="config_show_option">
                                            <option value="0">-- {{ lang('text_none') }} --</option>
                                            {% for key, value in options %}
                                                <option {{ key == config_show_option ? 'selected' : '' }}
                                                        value="{{ key }}">{{ value }}</option>
                                            {% endfor %}
                                        </select>
                                        <span class="help-block"></span>
                                        <span class="text-muted">{{ lang('entry_show_option_help') }}</span>
                                    </div>
                                </div>
                            </div>
                            
                            <hr>

                            <div class="page-link-group">
                                <div class="info">
                                    <p class="control-label">
                                        {{lang('mn_setting_menu_units_label')}}
