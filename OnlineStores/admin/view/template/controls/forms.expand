    <span class="input-group-addon {{ addon.class }}"><i class="{{ addon.icon_value }}"></i></span>

{% endmacro %}


{% macro addonText(addon) %}

    <span class="input-group-addon {{ addon.class }}">{{ addon.value }}</span>



