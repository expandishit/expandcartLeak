{% macro summernote(layout,placeholder) %}
    <div class="{{layout|default('summernote')}}">
        {{placeholder}}
    </div>
{% endmacro %}

<!-- 
layout options available :
1- summernote ( default )
2- summernote-airmode ( editor with floated toolpar )

Placeholder, 
any text / html content to be typed first once the editor is loaded 
-->