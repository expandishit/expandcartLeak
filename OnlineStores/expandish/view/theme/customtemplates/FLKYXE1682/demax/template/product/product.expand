{% set ALT_IMAGE = product_name %}

{% if attribute_groups|length > 0 %}
    {% for attribute_group in attribute_groups %}
        {% if attribute_group['name'] == 'NOSHOW' %}
            {% for attribute in attribute_group['attribute'] %}
                {% if attribute['name'] =='ALT_IMAGE' %}
                    {% set ALT_IMAGE = attribute['text'] %}
                {% endif %}
            {% endfor %}
        {% endif %}
    {% endfor %}
{% endif %}
{{ include('default/template/module/minimum_deposit/minimum_deposit_model.expand') }}

 <!-- if pop up modal is enabled -->
{% if curtain_seller is defined and curtain_seller['isEnabled'] == true and  curtain_seller['curtain_seller_in_form'] == 0 %}
    {% include 'default/template/module/curtain_seller.expand' %}
{% endif %}


<div id="notification"></div>


{#
    - This part has been commented as it overrides the popupwindow styles and script
    - They will be loaded programatically through a function that fires on popup close event

<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.css" />
<script src="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.js"></script>
#}

<div id="container">
    <div class="main-content">
        <div class="container">


            <!-- Breadcrumbs -->
            <div class="breadcrumbs">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <ul>
                                {% for breadcrumb in breadcrumbs %} {% if loop.last %}
                                <li>
                                    <strong>{{ breadcrumb['text'] }}</strong>
                                </li>
                                {% else %}
                                <li class="home">
                                    <a title="Go to Home Page" href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a>
                                    <span>&raquo;</span>
                                </li>
                                {% endif %} {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Breadcrumbs End -->
            <!-- Main Container -->

            <div class="main-container col1-layout">
                <div class="container"> 

                    <div class="row">
                        <div class="col-main">
                            <div class="product-view-area">
                                <div class="product-big-image col-xs-12 col-sm-5 col-lg-5 col-md-5">

                                    <div class="large-image">
                                        <!-- Start -->
                                            {% set FirstImage = '' %}

                                            {% for image in images|slice(0, 1) %}
                                                {% set FirstImage = image(image.image, 650, auto) %}
                                            {% endfor %}

                                            {% if not thumb %}

                                            <a data-fancybox="gallery" class="thumb-link" href='{{ image(image, 1850, auto) }}' >
                                                <img  id='zoom1' class="cloudzoom" src="{{ FirstImage }}"  alt='{{ ALT_IMAGE }}'  data-cloudzoom="zoomImage: '{{ FirstImage }}',zoomPosition: 'inside' ,autoInside: true ">
                                            </a>
                                            {% else %}

                                            <a data-fancybox="gallery" class="thumb-link" href='{{ image(image, 1850, auto) }}' >
                                                <img id='zoom1' class = 'cloudzoom' src="{{ image(image, 650, auto) }}" alt='{{ ALT_IMAGE }}' title="" data-cloudzoom="zoomImage: '{{ image(image, 650, auto) }}',zoomPosition: 'inside' ,autoInside: true " />
                                            </a>
                                            {% endif %}
                                        <!-- End -->
                                    </div>

                                    <div class="flexslider flexslider-thumb">

                                        <ul class="slider-items previews-list">

                                            {% if image != '' %}
                                            <li class="item">
                                                <a data-fancybox="gallery" class="thumb-link" href='{{ image(image, 1850, auto) }}'>
                                                    <img class="cloudzoom-gallery" data-cloudzoom="useZoom: '#zoom1', image: '{{ image(image, 650, auto) }}',zoomImage: '{{ image(image, 650, auto) }}'" src="{{ image(image, 100, 100) }}" alt = "{{ ALT_IMAGE }}"/>
                                                </a>
                                            </li>

                                            {% endif  %}
                                            {% for image in images %}
                                            <li class="item">
                                                <a data-fancybox="gallery" class="thumb-link" href='{{ image(image.image, 1850, auto) }}'>
                                                    <img class="cloudzoom-gallery" data-cloudzoom="useZoom: '#zoom1', image: '{{ image(image.image, 650, auto) }}',zoomImage: '{{ image(image.image, 650, auto) }}'" src="{{ image(image.image, 100, 100) }}" alt = "{{ ALT_IMAGE }}"/>
                                                </a>
                                            </li>
                                            {% endfor %}

                                        </ul>
                                    </div>
                                    <!-- end: more-images -->

                                </div>
                                <div class="col-xs-12 col-sm-7 col-lg-7 col-md-7 product-details-area">
                                    <div class="product-name">
                                            {% if config('show_brands') %}
                                            <a href="{{manufacturer_href}}" alt="{{ manufacturer }}" style="display: inline-block;">
                                                <img class="manufacturer-img" src="{{image(manufacturerimg) }}" alt="{{ manufacturer }}">
                                                <h4 class="manufacturer-name">{{ manufacturer }}</h4>
                                            </a>
                                            {% endif %}
                                        <h1>{{ product_name }}</h1>
                                    </div>
                                     {% if not seller.disable_price %}
                                    <div class="price-box product-price">
                                        <input type="hidden" id="currency_symbols_left" value='{{currency_symbols["left"]}}'>
                                       <input type="hidden" id="currency_symbols_right" value='{{currency_symbols["right"]}}'>
                                        {% if ('-1' in price) or ('-1' in special) %}
                                            <p class="clickable special-price" onclick="contact_us('{{ product.product_id }}');"> <span class="price-label">{{ lang('button_req_quote') }}</span>{{ lang('button_req_quote') }}</p>
                                            <div id="enquiry-{{ product.product_id }}"  style="display:none">{{ product.name }}:</div>
                                        {% elseif special %}
                                        <p class="special-price">
                                                <input type="hidden" id="price_value" value="{{ special_value }}">
                                                <span class="price-label">Special Price</span>
                                                <ins><span class="price price_display">{{ special }}</span></ins>
                                            </p>
                                            <p class="old-price">

                                                {# This input added to reflect on original price when change a select option #}
                                                <input type="hidden" id="original_value" value="{{ original_price }}">

                                                <span class="price-label">Regular Price:</span>
                                                <del><span class="price original_display">{{ price }}</span></del>
                                            </p>
                                        {% else %}
                                        <p class="special-price">
                                                <input type="hidden" id="price_value" value="{{ price_value }}">
                                                <span class="price-label">Special Price</span>
                                                <ins><span class="price price_display">{{ price }}</span></ins>
                                            </p>
                                        {% endif %}
                                        {% if tax != "0" %}
                                        <span class="price-tax">
                                              {% if tax_included_val is defined and tax_included_val %}
                                                  {{ lang('text_included_tax') }}
                                              {% else %}
                                                  {% if not price_without_tax  %}
                                                        {{ lang('text_tax') }} <span id="tax_value_display">{{ tax }}</span>
                                                        <input type="hidden" id="tax_value" value="{{ tax_value }}"/>
                                                  {% endif %}
                                              {% endif %}
                                            </span><br/>
                                        {% else %}
                                            <br/>
                                        {% endif %}

                                        {{ include('default/template/module/minimum_deposit/display_price.expand') }}

                                        {% if curtain_seller is defined and curtain_seller['isEnabled'] == true and curtain_seller['curtain_seller_in_form'] == 0 %}
                                            <br>
                                            <button class="btn btn-info" onclick='showCurtainSellerModal()'>{{ lang('text_click_edit_dimention') }}</button>
                                        {% endif %}

                                        {% if discounts|length > 0 %}
                                        <br/>
                                        <div class="discount">
                                            {% for discount in discounts %}
                                                {{ lang('text_discount')|format(discount.quantity, discount.price) }}<br/>
                                            {% endfor %}
                                        </div>
                                        {% endif %}

                                    </div>
                                    {% endif %}
                                    <div class="ratings">
                                        <div class="rating">
                                            {% if rating == 0 %}
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            {% elseif rating == 1 %}
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            {% elseif rating == 2 %}
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            {% elseif rating == 3 %}
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            {% elseif rating == 4 %}
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star-o"></i>
                                            {% else %}
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            {% endif %}
                                        </div>
                                        <p class="rating-links">
                                            <a class="clickable" onclick="$('a[href=\'#reviews\']').click();$('html, body').animate({scrollTop: $('a[href=\'#reviews\']').offset().top - 5}, 100);">{{ lang('text_reviews')|format(reviews_count) }}</a>
                                            <span class="separator">|</span>
                                            <a class="clickable" onclick="$('a[href=\'#reviews\']').click();$('html, body').animate({scrollTop: $('a[href=\'#reviews\']').offset().top - 5}, 100);">{{ lang('text_write') }}</a>
                                        </p>
                                        {% if is_custom_stock_status_colors == 1 %}
                                            <p class="availability in-stock rtl-left">{{ lang('text_stock') }}&nbsp;
                                                <span style="background-color: {{stock_status_color}}">{{ stock ? stock : lang('text_instock') }}</span>
                                            </p>
                                        {% else %}
                                            <p class="availability in-stock rtl-left">{{ lang('text_stock') }}&nbsp;
                                                <span>{{ stock ? stock : lang('text_instock') }}</span>
                                            </p>
                                        {% endif %}
                                        {% if model %}
                                        <br/><span class="">{{ text_product_model }}</span> {{ model }}<br/><br/>
                                        {% endif %}
                                    </div>
                                    {% if seller %}
                                    <div class="col-md-12">
                                        <a onclick="$('#SellerInfo').slideToggle();" class="btn-wishlist link-wishlist" style="cursor: pointer;"><i class="fa fa-user" aria-hidden="true"></i><span>&nbsp;&nbsp;{{ seller_info }}</span></a>
                                    </div>
                                    <div id="SellerInfo" class="attr-product" style="display: none;">
                                        <br>
                                        <p class="desc"><span style="font-weight: bold;">{{ lang('Seller_Nickname') }}:</span> <a href="{{ seller.href }}">{{ seller.nickname }}</a></p>
                                        <p class="desc"><span style="font-weight: bold;">{{ lang('Seller_Website') }}:</span> <a href="">{{ seller.website }}</a></p>
                                        <p class="desc"><span style="font-weight: bold;">{{ lang('Seller_Country') }}:</span> {{ seller.country }}</p>
                                        <p class="desc"><span style="font-weight: bold;">{{ lang('Seller_Zone') }}:</span> {{ seller.zone }}</p>
                                        <p class="desc"><span style="font-weight: bold;">{{ lang('Seller_Sales') }}:</span> {{ seller.total_sales }}</p>
                                        <p class="desc"><span style="font-weight: bold;">{{ lang('Seller_Products') }}:</span> {{ seller.total_products }}</p>
                                        <br>
                                    </div>
                                    {% endif %}
                                    <div class="short-description">
                                        <h2>{{ lang('Short_Description') }}</h2>
                                        <p>{{ description|slice(0, 599)|striptags ~ '....' }}
                                            <a onclick="$('a[href=\'#description\']').click();$('html, body').animate({scrollTop: $('#description').offset().top - 5}, 100);" style="cursor: pointer;">{{ lang('text_View_More') }}</a>
                                        </p>
                                    </div>
                                    <div class="product-add-form product-color-size-area">

                                        {# Start :: Product Design Module #}
                                        {% if product_designer is defined and product_designer == 1 %}

                                        <a type="button" onclick="showpopup({{ product_id }},'FFFFFF');" class="action button clickable">{{ lang('pd_btn_text') }}</a>

                                        <script>
                                            function showpopup(pid,ccode) {
                                                var frameSrc = 'index.php?route=module/product_designer&product_id='+pid+'&procolor='+ccode;
                                                $('#design_pop_frame').attr("src",frameSrc);
                                                $('#myModal').modal({show:true});
                                            }
                                            function closeModel(){
                                                $('#myModal').modal('hide');
                                            }
                                            function addcart(proId,qty,cust_id){
                                                addToCartCustom(proId,qty,cust_id);
                                            }
                                        </script>

                                        <style>
                                            .modal {
                                                text-align: center;
                                                padding: 0!important;
                                            }
                                            .modal:before {
                                                content: '';
                                                display: inline-block;
                                                height: 100%;
                                                vertical-align: middle;
                                                margin-right: -4px;
                                            }
                                            .modal-dialog {
                                                display: inline-block;
                                                text-align: left;
                                                vertical-align: middle;
                                            }
                                        </style>
                                    {% endif %}

                                    {# Product Design PopUp Window #}
                                    {% if product_designer is defined and product_designer == 1 %}
                                    <style>
                                        .modal-title {
                                        {% if pd_options['back_color'] is defined and pd_options['back_color'] != '' %}
                                            color: {{ pd_options['back_color'] }};
                                        {% endif %}
                                        {% if pd_options['cust_fw'] is defined and pd_options['cust_fw'] != '' %}
                                            font-style: italic;
                                        {% endif %}
                                        }
                                    </style>
                                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
                                        <div class="modal-dialog modal-lg" role="document" style="width:735px;">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                                                    <h4 class="modal-title" id="myModalLabel">{{ lang('cust_header_text') }}</h4>
                                                </div>
                                                <div class="modal-body" style="padding:0px !important;">
                                                    <iframe id="design_pop_frame" src="" scrolling="no" width="730" height="520" frameborder="0"></iframe>
                                                    <div style="clear:both;"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br><br>
                                    {% endif %}
                                    {# End :: Product Design Module #}

                                     {% if rentalProducts == 1 %}
                                    {% if transaction_type == 2 %}
                                    <div class="product-add-form">
                                        <div class="option form-group">
                                            <label>{{ lang('label_rental_range') }}</label>
                                            <div class="control">
                                                <label>{{ lang('text_range_from') }}:</label><input class="dateRangeFrom form-control" type="text" readonly="true" name="dateRange[from]" /><br>
                                                <label>{{ lang('text_range_to') }}:</label> <input class="dateRangeTo form-control" type="text" readonly="true" name="dateRange[to]" />
                                            </div>
                                        </div>
                                    </div>
                                    {% endif %}
                                {% endif %}
                                <!-- if pop up modal is not enabled -->
                                {% if curtain_seller is defined and curtain_seller['isEnabled'] == true and  curtain_seller['curtain_seller_in_form'] == 1 %}
                                    {% include 'default/template/module/curtain_seller_form.expand' %}
                                {% endif %}
<!-- =====================================================================================-->
<!-- =================================== Options Area  ===================================-->
<!-- =====================================================================================-->
                                        {% if options %}
                                        <div class="attr-product attr-size-box">
                                            <div class="product-options-wrapper">
                                                <div class="options">

                                                    <!-- ######################### Select -->

                                                    {% for option in options %} {% if option.type == 'select' %}
                                                    <div id="option-{{ option.product_option_id }}" class="option form-group">
                                                        <label for="option[{{ option.product_option_id }}]">{{ option.name }} {{ option.required ? '<sup>*</sup>' : '' }} <span id="relational_option_loading-{{ option.option_id }}" style="display: none">&nbsp;&nbsp;<img src="/expandish/view/theme/default/image/spinners/spinner_1.gif"></span></label>
                                                        <div class="control">
                                                            <select name="option[{{ option.product_option_id }}]" id="option[{{ option.product_option_id }}]" class="opt-select-variation form-control relational_option_{{ option.option_id }}" onchange="{% if not is_knawat_product %} getSelectPrice(this.value,'{{ option.product_option_id }}', {{ option.option_id }}, {{ opt_relational_status }}) {% else %} getVariationPrice('{{product_id}}','{{ option.product_option_id }}', {{ option.option_id }}, {{ opt_relational_status }}) {% endif %}"
                                                                    {% if ( (opt_relational_status and option.option_id in opt_relational_parents)
                                                                        or
                                                                        (opt_relational_status and opt_elements_parents[option.option_id])
                                                                        )
                                                                    %}
                                                                        {{ 'data-relations="' ~ option.option_id ~ '"' }}
                                                                        {{ 'data-relationalparents="' ~ opt_elements_parents[option.option_id] ~ '"' }}
                                                                        {{ 'data-relationalchild="' ~ opt_relational_relations[option.option_id] ~ '"' }}
                                                                        {{ 'data-option_id="' ~ option.option_id ~ '"' }}
                                                                    {% endif %}
                                                            >
                                                                <option value="">{{ lang('text_select') }}</option>
                                                        {% if (not opt_relational_status) or (opt_relational_status and option.option_id not in opt_relational_childs) %}
                                                                {% for option_value in option.option_value %}
                                                                <option value="{{ option_value.product_option_value_id }}"
                                                                {% if option_value.quantity <= 0 and not is_knawat_product %}disabled="disabled"{% endif %} 
                                                                            data-option-value-id="{{option_value.option_value_id}}"
                                                                        {% if option.product_option_id in selectedOptions|keys %}
                                                                            {% if option_value.product_option_value_id == selectedOptions[option.product_option_id] %}
                                                                                selected="selected"
                                                                            {% endif %}
                                                                        {% endif %}
                                                                >{{ option_value.name }}
                                                                    <!-- Option Quantity Check -->
                                                                    {% if option_value.quantity <= 0 and not is_knawat_product %}
                                                                        ({{ lang('text_notavailable') }})
                                                                    {% endif %}
                                                                    <!-- End Option Quantity Check   -->

                                                                    {# OPTION PRICE #}
                                                                    {% if option_value.price and config('config_show_option_prices') == '1' and not is_knawat_product  %}
                                                                    ({{ option_value.price_prefix }}{{ option_value.price }})
                                                                    {% endif %}
                                                                    {# /OPTION PRICE #}
                                                                </option>
                                                                {% endfor %}
                                                        {% endif %}
                                                            </select>
                                                            <div id="relational_option_hidden_{{ option.option_id }}">
                                                                {% if (not opt_relational_status) or (opt_relational_status and option.option_id not in opt_relational_childs) %}
                                                                    {% for option_value in option.option_value %}
                                                                        <input type="hidden" id="select-price-{{ option_value.product_option_value_id }}" value="{{ option_value.price_value }}">
                                                                        <input type="hidden" id="select-prifex-{{ option_value.product_option_value_id }}" value="{{ option_value.price_prefix }}">
                                                                    {% endfor %}
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                        <input type="hidden"
                                                               id="old_select_price-{{ option.product_option_id }}"
                                                               value="">
                                                        <input type="hidden"
                                                               id="old_select_prefix-{{ option.product_option_id }}"
                                                               value="">
                                                    </div>
                                                    {% endif %}

                                                    <!-- ######################### Radio -->

                                                     {% if option.type == 'radio' %}
                                                    <fieldset id="option-{{ option.product_option_id }}" class="option form-group">
                                                        <label for="option[{{ option.product_option_id }}]">{{ option.name }} {{ option.required ? '<sup>*</sup>' : '' }} </label> {% for option_value in option.option_value %}
                                                        <div class="form-check">
                                                            <label class="form-check-label">
                                                                <input type="radio" class="form-check-input"
                                                                       name="option[{{ option['product_option_id'] }}]"
                                                                       id="option-value-{{ option_value['product_option_value_id'] }}"
                                                                       value="{{ option_value['product_option_value_id'] }}" onclick="getRadioPrice('{{ option_value['price_value'] }}', '{{ option_value['price_prefix'] }}','{{ option.product_option_id }}', 'radio')"
                                                                       {% if option_value.quantity <= 0 %}disabled="disabled"{% endif %}
                                                                        {% if option.product_option_id in selectedOptions|keys %}
                                                                            {% if option_value.product_option_value_id == selectedOptions[option.product_option_id] %}
                                                                                checked="checked"
                                                                            {% endif %}
                                                                        {% endif %}
                                                                       >
                                                                <span {% if option_value.quantity <= 0 %}class="over_line"{% endif %}>
                                                                    {{ option_value['name'] }}
                                                                </span>
                                                                {% if option_value.price and config('config_show_option_prices') == '1' %}
                                                                    ({{ option_value.price_prefix }}{{ option_value.price }})&#x200E;
                                                                {% endif %}

                                                            </label>
                                                        </div>
                                                        {% endfor %}
                                                        <input type="hidden"
                                                               id="old_radio_price-{{ option.product_option_id }}"
                                                               value="">
                                                        <input type="hidden"
                                                               id="old_radio_prefix-{{ option.product_option_id }}"
                                                               value="">
                                                    </fieldset>
                                                    {% endif %}
                                                    {% if option.type == 'product' and option.custom_option == 'multiselect' %}
                                                        <div class="c-options-group">
                                                            <div class="c-option-heading" role="tab"
                                                                 id="heading{{ option.product_option_id }}">
                                                                <a class="collapsed" role="button" data-toggle="collapse"
                                                                   data-parent="#option-parent"
                                                                   href="#option{{ option.product_option_id }}" aria-expanded="true"
                                                                   aria-controls="option{{ option.product_option_id }}">
                                                                    <div class="info">
                                                                        <div class="img">
                                                                            <img src="{{option.option_value[0].image}}" alt="">
                                                                        </div>
                                                                        <div>
                                                                            <p class="name option-name-heading">{{option.name}}</p>
                                                                            <p class="sub-name">{{option.option_value[0].name}}</p>
                                                                        </div>
                                                                    </div>
                                                                </a>
                                                            </div>
                                                            <div id="option{{ option.product_option_id }}"
                                                                 class="panel-collapse collapse optionProduct" role="tabpanel"
                                                                 aria-labelledby="heading{{ option.product_option_id }}">
                                                                <div class="c-option-body prod">
                                                                    {% for option_value in option.option_value %}
                                                                        <div class="form-check from-product-select prod-options-container">
                                                                            <label class="form-check-label prod-options-box">
                                                                                <input type="checkbox" class="form-check-input"
                                                                                       main-option-value={{option.name}}
                                                                                       name="option[{{ option['product_option_id'] }}]"
                                                                                       id="option-value-{{ option_value['product_option_value_id'] }}"
                                                                                       value="{{ option_value['product_option_value_id'] }}"
                                                                                       onclick="getCheckboxPrice('{{ option_value['price_value'] }}', '{{ option_value['price_prefix'] }}',this.checked)"
                                                                                       {% if option_value.quantity <= 0 %}disabled="disabled"
                                                                                        {% endif %}
                                                                                        {% if loop.index == 1 and option.required != 0 %} checked
                                                                                        {% endif %}>
                                                                                {% if loop.index == 1 and option.required != 0 %}
                                                                                    <script>
                                                                                        $(document).ready(function () {
                                                                                            getCheckboxPrice('{{ option_value['price_value'] }}', '{{ option_value['price_prefix'] }}', $("#"+{{ option.product_option_id }}).is(":checked"))
                                                                                        })
                                                                                    </script>
                                                                                {% endif %}
                                                                                <div class="img">
                                                                                    <img src="{{option_value.image}}" alt="">
                                                                                    <span class="option-name">
                                                    {{ option_value['name'] }}
                                                </span>
                                                                                </div>
                                                                                <div class="info-bar">
                                                <span class="option-price">
                                                    <span
                                                            {% if option_value.quantity <= 0 %}class="over_line"
                                                        {% endif %} {% if option_value.price %}
                                                            {{ option_value.price_prefix }}
                                                        data-value="{{ option_value.price_value }}"
                                                        {% else %} data-value="0" {% endif %}>
                                                        {% if option_value.price %}
                                                            {{ option_value.price_prefix }}{{ option_value.price }}&#x200E;
