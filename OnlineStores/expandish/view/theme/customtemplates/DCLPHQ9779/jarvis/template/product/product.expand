<style>
.page-content{
    margin-top: 30px;
}
#pageContent *:not(.fa){
    font-family: 'Yanone Kaffeesatz', sans-serif;
}
.block.block-product-image{
    background: transparent;
}
.rtl-left{
    display: none;
}
.return-link, .return-link:hover {
    font-size: 16px;
    font-weight: bold;
    color: #15234C;
    display: flex;
    align-items: center;
    line-height: 1;
    margin-bottom: 25px;
    font-style: normal;
    text-transform: uppercase;
}
.icono-arrow1-right:lang(en){
    position: relative;
    display: inline-block;
    vertical-align: middle;
    color: #15234C;
    box-sizing: border-box;
    width: 10px;
    height: 10px;
    border-width: 3px 3px 0 0;
    border-style: solid;
    margin: 13px 20px;
    transform: rotate(-135deg);
    border-radius: 3px;
}
.icono-arrow1-right:lang(ar){
    position: relative;
    display: inline-block;
    vertical-align: middle;
    color: #15234C;
    box-sizing: border-box;
    width: 10px;
    height: 10px;
    border-width: 3px 3px 0 0;
    border-style: solid;
    margin: 13px 20px;
    transform: rotate(45deg);
    border-radius: 3px;
}
.icono-arrow1-right:before{
    content: "";
    box-sizing: border-box;
    right: 0;
    top: -1.5px;
    position: absolute;
    height: 2px;
    box-shadow: inset 0 0 0 32px;
    transform: rotate(-45deg);
    width: 20px;
    transform-origin: right top;
}
#canvas{
    background: url("{{ asset('/images/product-page-bg.png') }} ");
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
}
#header{
    background: #fff;
}
.block.block-product-image{
    border: none;
    margin: 0;
}
.product-details{
    background:#fff;
    padding: 40px 60px 0px 40px;
}
.stock .label{
    display: inline-block;
    vertical-align: middle;
    color: #15234C;
    font-size: 14px;
    font-weight: bold;
    line-height: 20px;
    margin-left: 6px;
    background: transparent;  
}
.product-info-stock-sku,.product-star{
    display: inline-block;
}
.product-name{
    font-size: 50px;
    line-height: 1;
    color: #15234C;
    font-weight: bold;
    text-transform: uppercase;
}

.productBenefitWrapper:lang(ar){
    flex-direction: row-reverse;
}
.productBenefitWrapper .benefitBlock:lang(en) {
    display: flex;
    align-items: center;
    margin-right: 30px;
    position: relative;
    margin-bottom: 20px;
}
.productBenefitWrapper .benefitBlock:lang(ar){
    display: flex;
    align-items: center;
    margin-right: 0px;
    position: relative;
    margin-left: auto;
    margin-bottom: 20px;
}
.productBenefitWrapper .benefitBlock::before {
    position: absolute;
    content: "";
    border-right: 1px solid #ddd;
    right: -20px;
    top: -7px;
    bottom: -7px;
}
.productBenefitWrapper .benefitBlock:last-child::before{
    display: none;
}
.productBenefitWrapper .benefitBlock .benefitDesc p {
    margin-bottom: 0;
    font-size: 12px;
    line-height: 14px;
    text-transform: uppercase;
    font-weight: bold;
    font-family: 'proxima-nova-extra-condensed';
}
.productBenefitWrapper .benefitBlock i {
    margin: 0 10px;
    font-size: 20px;
}
.option8 .price_display{
    color: #C3063C;
    font-weight: bold;
    font-size: 30px;
    margin-right: 10px;
}
.price-tax{
    color: #858996;
    font-size: 18px;
    font-weight: 600;  
}
.input-qty{
    padding: 0 20px;
}
.quantity-minus, .quantity-plus {
    position: absolute;
    top: 0;
    background: #15234C;
    padding: 5px;
    display: inline-block;
    color: #F9B735;
    font-size: 20px;
    cursor: pointer;
}
.quantity-minus {
    left: 0;
}
.quantity-plus {
    right: 0;
}
#button-cart{
    width: calc(100% + 100px);
    font-size: 18px;
    font-weight: bold;
    line-height: 22px;
    text-align: center;
    background-color: #F9B735;
    letter-spacing: 0;
    padding: 18px 32px;
    color: #15234c;
    border-radius: 0;
}
#button-cart:lang(en){
    margin: 0px -40px;
}
#button-cart:lang(ar){
    margin: 0px -60px;
}
.product-extra-links a{
    height: 40px;
    width: 40px;
    background-color: #F9B735;
    border-radius: 50%;
    margin: 0 3px;
    color: #15234c;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
}

.share-icons{
    background-color: #15234C;
    padding: 27px 40px;
