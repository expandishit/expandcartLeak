    align-items: center;
    color: #fff;
    flex-wrap: wrap;
    margin-top: 20px;
}
.addthis_sharing_toolbox {
    margin: 0 auto;
}
.at-share-btn-elements a{
    background-color: #ffffff !important;
    margin: 0 5px !important;
}
.at-share-btn-elements a svg{
    fill: #15234C !important;
}
.block-product-image .product-list-thumb .owl-item {
    width: 80px !important;
    height: 80px !important;
    overflow: hidden;
    background: #fff !important;
    padding: 5px;
}
.block-product-image .product-list-thumb li a.selected img{
    border: none;
}
.product-description{
    background: #fff;
    padding: 84px 0px 0px;
    text-align: center;
}
.product-description h2, .product-review h2{
    font-size: 30px;
    color: #15234C;
    text-transform: uppercase;
    font-weight: 600;
    text-align: center;
}
.product-description p{
    line-height: 28px;
}
.product-attr{
    background:#15234C ;
    padding: 40px 0px;
}
.product-attr *{
    color: #fff;
    border-color:#fff ;
}
.product-attr h2{
    font-size: 30px;
    text-align: center;
    text-transform: uppercase;
    font-weight: 600;
    margin-bottom: 30px;
}
.product-attr table td{
    border-top: 1px solid #fff;
    border-right: 1px solid #fff;
}
.product-review{
    background-color: #F3F4F6;
    padding: 30px 0;
}
.col-md-9#content {
    width: 100%;
}
.review-ratting .comment, .comment-list .comment-content, .comment-form{
    background: #fff;
    padding: 20px;
    margin-bottom: 20px;
}
#button-review{
    height: 50px;
    width: 180px;
    color: #F9B735;
    font-size: 16px;
    font-weight: bold;
    background-color: #15234C;
    line-height: 16px;
    text-align: center;
    padding: 0px;
    text-transform: uppercase;
    display: inline-block;
}
#button-cart:hover, .product-extra-links a:hover, #button-review:hover{
    background-color: #15234c;
    color: #F9B735;
}
.short-desc{
    margin-bottom: 20px;
}
.product-price {
    margin-bottom: 10px;
}
@media (min-width: 992px){
    .d-flex{
        display: flex;
    }
    .productBenefitWrapper {
    display: flex;
}
}
@media (max-width: 992px){
    .productBenefitWrapper .benefitBlock::before{
        display: none;
    }
    .product-list-thumb .owl-stage{
        display: flex;
    }
    .comment-list .comment-avatar {
    float: none;
    }
    .comment-list .comment-content {
        margin-left: 0;
        margin-right: 0;
    }
}

